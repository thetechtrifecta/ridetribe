generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id           Int              @id @default(autoincrement())
  email        String           @unique
  rides        Ride[] 
}

model Ride {
  id           Int               @id @default(autoincrement())
  title        String
  creator      User              @relation(fields: [creatorId], references: [id])
  creatorId    Int
}
